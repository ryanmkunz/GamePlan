
@{
    ViewBag.Title = "Weather";
}

<h2>Weather</h2>
<html>
<head>
    <link href="@ApiKeyLibrary.GoogleGeolocationApiKey"/>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/skycons.js"></script>
