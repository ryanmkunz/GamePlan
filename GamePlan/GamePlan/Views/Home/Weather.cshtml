    #list li {
        list-style-type: none;
        
    }
    #list lr {
        padding: 15px;

    }
    .badge {
        padding: 25px;
        float: left;
        clear: left;
    }
</style>

</head>
<body>
    <div>
        <button id="getWeather" onclick="getWeather()">Get Current Weather!</button>
    </div>
    
    <div>
        <ul id="list">
            <lr class="badge">
                <li><p id="weekDay0"></p></li>
